<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!--ActionBarTextStyle-->
    <style name="ActionBarTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--TextStyle-->
    <style name="ItemsTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!--CardViewStyle-->
    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@color/purple_500</item>
        <item name="elevation">@dimen/spacing_small</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>
</resources>